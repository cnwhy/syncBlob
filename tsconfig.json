{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "baseUrl": "src",
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
  },
  "include": ["src/**/*"]
}